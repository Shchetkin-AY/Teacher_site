<h2>Войти</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
  <br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Эл. Почта" %>
  </div>

  <div class="field form-group">
  <br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "Пароль" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <br>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти", class: "btn btn-success" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
