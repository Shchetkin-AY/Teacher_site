
<h1>Список студентов</h1>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Эл. Почта</th>
      <th>Номер телефона</th>
      <th>Telegram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <div data-controller="drag">
      <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.id %></td>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email  %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.telegram %></td>
        <td><%= link_to "Подробнее", friend %></td>
        <td><%= link_to "Редактировать", edit_friend_path(friend) %></td>
        <td><%= link_to "Удалить", friend, method: :delete, data:{confirm: "Вы уверены?"} %></td>
      </tr>

      <% end %>
  </div>
</tbody>
</table>
<%= link_to "Добавить студента", new_friend_path, class: "btn btn-secondary" %>
